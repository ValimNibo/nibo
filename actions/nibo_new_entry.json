  "request": {
  	"method_name": "/customers",
    "json_api": true,
    "error_fields": ["error", "description"],
    "pre_hooks": {
      "hooks": [
        {
          "name": "Buscar cliente",
          "request": {
            "verb": "get",
            "method_name": "/customers",
            "params": [
              {"field": "$filter", "value": "document/number eq '{customer_doc}' or email eq '{customer_email}'", "type": "string"}
            ]
          }
        },
        {
          "name": "Criar cliente",
          "conditions": [[
            {"field": "id", "condition": "equal", "value": null}
          ]],
          "request": {
            "verb": "post",
            "method_name": "/customers",
            "params": [
              {"field": "email", "value": "{customer_email}"},
              {"field": "nome", "value": "{customer_name}"}
            ]
          }
        }
      ],
      "append_fields": [
        {"field": "stakeholderId", "value": "{id}", "type": "string"}
      ]
    }
  }
