{
  "name":"Criar agendamento",
  "action_key": "schedules/credit",
  "description":"É incluido um contas a receber no Nibo.",
  "action_fields":{
    "fields":[
      {
        "key": "Organization",
        "name": { "pt_BR": "Empresa", "en": "Organization" },
        "description": {
          "pt_BR": "Empresa",
          "en": "Organization"
        },
        "label": {
          "pt_BR": "Atribuído",
          "en": "Assignee"
        },
        "required": true,
        "visible": true,
        "advanced": false,
        "not_include_field_in_request" : true,
        "field_type": "dropdown",
        "data_type": "string",
        "list": {
          "type": "remote",
          "helper_method": "organization_list"
        },
        "placeholder": {
          "pt_BR": "Selecione uma empresa",
          "en": "Select an organization"
        }
      },
      {
        "key": "description",
        "name": {
          "pt_BR": "descrição",
          "en": "description"
        },
        "description": {
          "pt_BR": "Identifique quem é o cliente, associado ao recebível, no Nibo. Como padrão usamos o e-mail do seu cliente, mas você pode editá-lo.",
          "en": "Identify who is the client, associate to income on Nibo. As default we use client e-mail, but feel free to edit it."
        },
        "required": true,
        "default_value": "",
        "visible": true,
        "max": 20,
        "field_type": "custom_textarea",
        "data_type": "string",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "reference",
        "name": {
          "pt_BR": "referencia",
          "en": "reference"
        },
        "description": {
          "pt_BR": "Referência.",
          "en": "Reference."
        },
        "required": false,
        "default_value": "",
        "visible": true,
        "advanced": true,
        "max": 20,
        "field_type": "custom_textarea",
        "data_type": "string",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key":"ScheduleDate",
        "name":{
          "pt_BR":"Agendamento",
          "en":"Schedule"
        },
        "description":{
          "pt_BR":"O valor sempre será em dias. Ou seja, se for 30, o agendamento será para D+30, onde D é data de quando a transação acontenceu. Veja \"Data de Referência em campos avançados\"",
          "en":"Days to schedule be completed. For example, if the value is 20, the schedule will be D+30, where D is base data. See reference date."
        },
        "required":true,
        "default_value":30,
        "visible":true,
        "field_type":"integer",
        "data_type":"integer",
        "placeholder":{
          "pt_BR":"",
          "en":""
        },
        "label":{
          "pt_BR":"",
          "en":""
        }
      },
      {
        "key":"value",
        "name":{
          "pt_BR":"Valor da entrada",
          "en":"Entry value"
        },
        "description":{
          "pt_BR":"Valor do agendamento que será incluido no Nibo.",
          "en":"Schedule value that will be included in Nibo."
        },
        "required":true,
        "default_value":0,
        "visible":true,
        "advanced":true,
        "field_type":"custom_decimal",
        "data_type":"decimal",
        "placeholder":{
          "pt_BR":"",
          "en":""
        },
        "label":{
          "pt_BR":"",
          "en":""
        }
      },
      {
        "key": "customer_name",
        "name": {"pt_BR": "nome do cliente", "en": "customer name"},
        "description": {
          "pt_BR": "Nome do cliente.",
          "en": "Customer name."
        },
        "required": false,
        "visible": true,
        "advanced": false,
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
       {
        "key": "customer_email",
        "name": {"pt_BR": "e-mail do cliente", "en": "customer e-mail"},
        "description": {
          "pt_BR": "E-mail do cliente.",
          "en": "Customer e-mail."
        },
        "required": false,
        "visible": true,
        "advanced": false,
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
       {
        "key": "customer_doc",
        "name": {"pt_BR": "documento do cliente", "en": "customer doc"},
        "description": {
          "pt_BR": "Documento do cliente.",
          "en": "Customer doc."
        },
        "required": false,
        "visible": true,
        "advanced": false,
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
      {
        "key": "isFlagged",
        "name": {
          "pt_BR": "Favoritos",
          "en": "Favorites"
        },
        "description": {
          "pt_BR": "Selecionar como favorito.",
          "en": "Select as favorite."
        },
        "required": false,
        "visible": false,
        "default": false,
        "advanced": true,
        "field_type": "custom",
        "data_type": "boolean",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "dueDate",
        "name": {
          "pt_BR": "Data de referência",
          "en": "Reference date"
        },
        "description": {
          "pt_BR": "Campo de referência da data de quando a transação foi aprovada.",
          "en": "Reference date when the transaction was approved"
        },
        "required": true,
        "visible": true,
        "advanced": true,
        "field_type": "custom_date",
        "data_type": "datetime",
        "date_format": "%Y-%m-%dT00:00:00",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "categoryId",
        "name": {
          "pt_BR": "Categoria",
          "en": "Category"
        },
        "description": {
          "pt_BR": "Categorias na Nibo.",
          "en": "Categories of Nibo."
        },
        "required": false,
        "visible": true,
        "advanced": true,
        "field_type": "dropdown",
        "data_type": "string",
        "list": {
          "type": "remote",
          "helper_method": "nibo_category_list"
        },
        "placeholder": {
          "pt_BR": "Selecione uma categoria",
          "en": "Select a category"
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "costCenterId",
        "name": {
          "pt_BR": "Centros de Custo",
          "en": "Cost centers"
        },
        "description": {
          "pt_BR": "Centros de custo na Nibo.",
          "en": "Cost centers of Nibo."
        },
        "required": false,
        "visible": true,
        "advanced": true,
        "field_type": "dropdown",
        "data_type": "string",
        "list": {
          "type": "remote",
          "helper_method": "nibo_costCenter_list"
        },
        "placeholder": {
          "pt_BR": "Selecione um centro de custo",
          "en": "Select a cost center"
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      }
    ]
  },
  "request": {
  	"method_name": "/customers",
    "json_api": true,
    "error_fields": ["error", "description"],
    "pre_hooks": {
      "hooks": [
        {
          "name": "Buscar cliente",
          "request": {
            "verb": "get",
            "method_name": "/customers",
            "params": [
              {"field": "$filter", "value": "document/number eq '{customer_doc}' or email eq '{customer_email}'", "type": "string"}
            ]
          }
        },
        {
          "name": "Criar cliente",
          "conditions": [[
            {"field": "id", "condition": "equal", "value": null}
          ]],
          "request": {
            "verb": "post",
            "method_name": "/customers",
            "params": [
              {"field": "email", "value": "{customer_email}"},
              {"field": "nome", "value": "{customer_name}"}
            ]
          }
        }
      ],
      "append_fields": [
        {"field": "stakeholderId", "value": "{id}", "type": "string"}
      ]
    }
  }
}
