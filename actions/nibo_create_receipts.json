{
  "name": {
    "pt_BR": "criar um novo recebimento no Nibo",
    "en": "create a new receipt in Nibo"
  },
  "action_key": "receipts",
  "description": {
    "pt_BR": "criar um novo recebimento no Nibo",
    "en": "create a new receipt in Nibo"
  },
  "action_fields":{
    "fields":[
      {
        "key": "Organization",
        "name": { "pt_BR": "Empresa", "en": "Organization" },
        "description": {
          "pt_BR": "Empresa",
          "en": "Organization"
        },
        "label": {
          "pt_BR": "Atribuído",
          "en": "Assignee"
        },
        "required": true,
        "not_include_field_in_request": true,
        "field_type": "dropdown",
        "data_type": "string",
        "list": {
          "type": "remote",
          "helper_method": "nibo_organization_list"
        },
        "placeholder": {
          "pt_BR": "Selecione uma empresa",
          "en": "Select an organization"
        }
      },
      {
        "key": "accountId",
        "label":{
          "pt_BR": "Sua conta no Nibo",
          "en": "Your account on Nibo"
        },
        "description":{
          "pt_BR": "Conta existente na Nibo no qual será vinculada as entradas",
          "en": "Nibo account that will be relation with the entries"
        },
        "required": true,
        "field_type": "dropdown",
        "data_string": "string",
        "list": {
          "type": "remote",
          "helper_method": "nibo_accounts_list"
        },
        "name": {
          "pt_BR": "Sua conta no Nibo",
          "en": "Your account on Nibo"
        },
        "placeholder": {
          "pt_BR": "Selecionar conta",
          "en": "Select account"
        }
      },
      {
        "key": "categoryId",
        "name": {
          "pt_BR": "Categoria",
          "en": "Category"
        },
        "description": {
          "pt_BR": "Categorias na Nibo.",
          "en": "Categories of Nibo."
        },
        "required": true,
        "field_type": "dropdown",
        "data_type": "string",
        "list": {
          "type": "remote",
          "helper_method": "nibo_category_list"
        },
        "placeholder": {
          "pt_BR": "Selecione uma categoria",
          "en": "Select a category"
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "costCenterId",
        "name": {
          "pt_BR": "Centros de Custo",
          "en": "Cost centers"
        },
        "description": {
          "pt_BR": "Centros de custo na Nibo.",
          "en": "Cost centers of Nibo."
        },
        "required": true,
        "field_type": "dropdown",
        "data_type": "string",
        "list": {
          "type": "remote",
          "helper_method": "nibo_costCenter_list"
        },
        "placeholder": {
          "pt_BR": "Selecione um centro de custo",
          "en": "Select a cost center"
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "value",
        "name": {
          "pt_BR": "Valor",
          "en": "value"
        },
        "description": {
          "pt_BR": "Valor que será incluído na sua conta do Nibo.",
          "en": "Value that will be included in your account on Nibo."
        },
        "required": true,
        "field_type": "custom",
        "data_type": "decimal",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "date",
        "name":{
          "pt_BR": "Data da entrada",
          "en": "Entry date"
        },
        "description": {
          "pt_BR": "Data em que o pagamento foi aprovado.",
          "en": "Date which payment was approved."
        },
        "required": true,
        "field_type": "custom",
        "data_type": "string",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "description",
        "name": {
          "pt_BR": "descrição",
          "en": "description"
        },
        "description": {
          "pt_BR": "Identifique quem é o cliente, associado ao recebível, no Nibo. Como padrão usamos o e-mail do seu cliente, mas você pode editá-lo.",
          "en": "Identify who is the client, associate to income on Nibo. As default we use client e-mail, but feel free to edit it."
        },
        "required": true,
        "field_type": "custom",
        "data_type": "string",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "isFlag",
        "name": {
          "pt_BR": "Favoritos",
          "en": "Favorites"
        },
        "description": {
          "pt_BR": "Selecionar como favorito.",
          "en": "Select as favorite."
        },
        "required": true,
        "field_type": "custom",
        "data_type": "boolean",
        "placeholder": {
          "pt_BR": "",
          "en": ""
        },
        "label": {
          "pt_BR": "",
          "en": ""
        }
      },
      {
        "key": "customer_name",
        "name": { "pt_BR": "Nome", "en": "Name" },
        "description": {
          "pt_BR": "Nome do cliente.",
          "en": "Customer's Name"
        },
        "required": true,
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
      {
        "key": "customer_email",
        "name": { "pt_BR": "Email", "en": "Email" },
        "description": {
          "pt_BR": "Email do cliente.",
          "en": "Customer's Email"
        },
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      },
      {
        "key": "customer_document_number",
        "name": { "pt_BR": "Documento", "en": "Document" },
        "description": {
          "pt_BR": "Documento do cliente.",
          "en": "Customer's Document"
        },
        "field_type": "custom",
        "data_type": "string",
        "not_include_field_in_request": true
      }
    ]
  },
  "request": {
  	"method_name": "/receipts?Organization={Organization}",
    "json_api": true,
    "error_fields": ["error", "description"],
    "pre_hooks": {
      "hooks": [
        {
          "name": "Buscar cliente",
          "request": {
            "verb": "get",
            "method_name": "/customers",
            "params": [
              {"field": "Organization", "value": "{Organization}", "type": "string"},
              {"field": "$filter", "value": "document/number eq '{customer_document_number}' or email eq '{customer_email}' or name eq '{customer_name}'", "type": "string"}
            ],
            "response_field": ["items"]
          }
        },
        {
          "name": "Criar cliente",
          "conditions": [[
            {"field": "id", "condition": "equal", "value": null}
          ]],
          "request": {
            "verb": "post",
            "method_name": "/customers?Organization={Organization}",
            "params": [
              {"field": "name", "value": "{customer_name}", "type": "string"},
              {"field": "email", "value": "{customer_email}", "type": "string"},
              {"field": "document.number", "value": "{customer_document_number}", "type": "string"}
            ]
          }
        }
      ],
      "append_fields": [
        {"field": "stakeholderId", "value": "{id}", "type": "string"}
      ]
    }
  }
}
